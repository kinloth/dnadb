<p id="notice"></p>
<h4>Gene</h4>
<p>
  <strong>Nome:</strong>
	<%= @gene.name %>
</p>

<p>
  <strong>Variância:</strong>
  <%= @gene.variance %>
</p>

<p>
  <strong>Informações:</strong>
  <%= @gene.info %>
</p>

<% if !@diseases.blank? %>
	<div class="container">
		<strong>Doenças associadas:</strong>
		<table style="width:30%">
			<thead>
				<th>Nome</th>
				<th>Estado</th>
				<th>Quantidade</th>
			</thead>
			<tbody>
				<% for item in @diseases %>
				<tr>  
					<td><%= item.name %></td>											
					<td><%= item.state %></td> 
					<td><%= item.quantity %></td>
				<% end %>
				</tr>
			</tbody>
		</table>
	</div>
<% end %>
</div>
<br><br>
<%= link_to "Delete", @gene, :method => :delete %> |
<%= link_to "Criar Doença", controller: "diseases", action: "new" , gene_id: @gene.id %>
<hr>
<%= button_to 'Back', genes_path, :method => 'get' %>
